<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_syndic_appel_fond_tree" model="ir.ui.view">
        <field name="name">syndic.appel.fond.tree</field>
        <field name="model">syndic.appel.fond</field>
        <field name="arch" type="xml">
            <tree string="Appels de fonds"
                  decoration-info="state=='brouillon'"
                  decoration-success="state=='confirme'"
                  decoration-primary="state=='envoye'"
                  decoration-muted="state=='annule'">
                <field name="name"/>
                <field name="libelle"/>
                <field name="residence_id"/>
                <field name="type_charge"/>
                <field name="periode"/>
                <field name="montant"/>
                <field name="montant_total"/>
                <field name="date_emission"/>
                <field name="date_echeance"/>
                <field name="annee"/>
                <field name="mois"/>
                <field name="taux_collecte" widget="progressbar"/>
                <field name="state" widget="badge"
                       decoration-info="state=='brouillon'"
                       decoration-success="state=='confirme'"
                       decoration-primary="state=='envoye'"
                       decoration-danger="state=='annule'"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Form View (Odoo 17 compliant – no states/attrs on buttons) -->
    <record id="view_syndic_appel_fond_form" model="ir.ui.view">
        <field name="name">syndic.appel.fond.form</field>
        <field name="model">syndic.appel.fond</field>
        <field name="arch" type="xml">
            <form string="Appel de Fonds">
                <header>
                    <button name="action_confirm" type="object"
                            string="Confirmer"
                            invisible="state != 'brouillon'"
                            class="oe_highlight"/>
                    <button name="action_send" type="object"
                            string="Envoyer"
                            invisible="state != 'confirme'"
                            class="oe_highlight"/>
                    <button name="action_cancel" type="object"
                            string="Annuler"
                            invisible="state not in ('brouillon','confirme','envoye')"/>
                    <button name="action_draft" type="object"
                            string="Remettre en brouillon"
                            invisible="state != 'annule'"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="brouillon,confirme,envoye"/>
                </header>

                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_syndic_reglement)d" type="action"
                                class="oe_stat_button" icon="fa-money"
                                context="{'search_default_appel_fond_id': active_id}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="montant_collecte" widget="monetary"/>
                                </span>
                                <span class="o_stat_text">Collecté</span>
                            </div>
                        </button>
                        <button name="%(action_syndic_apartment)d" type="action"
                                class="oe_stat_button" icon="fa-home"
                                context="{'search_default_residence_id': residence_id}">
                            <field name="nb_apartments" widget="statinfo" string="Appartements"/>
                        </button>
                    </div>

                    <widget name="web_ribbon" title="Archivé" bg_color="bg-danger"
                            invisible="active == True"/>
                    <widget name="web_ribbon" title="Annulé" bg_color="bg-danger"
                            invisible="state != 'annule'"/>

                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="libelle"/>
                            <field name="residence_id" options="{'no_create': True}"/>
                            <field name="type_charge"/>
                            <field name="active" invisible="1"/>
                        </group>
                        <group>
                            <field name="periode"/>
                            <field name="annee"/>
                            <field name="mois" invisible="periode == 'unique'"/>
                            <field name="montant"/>
                            <field name="montant_total"/>
                        </group>
                    </group>

                    <group>
                        <group string="Dates">
                            <field name="date_emission"/>
                            <field name="date_echeance"/>
                        </group>
                        <group string="Statistiques">
                            <field name="taux_collecte" widget="progressbar"/>
                        </group>
                    </group>

                    <group string="Description">
                        <field name="description" nolabel="1"
                               placeholder="Description détaillée de l'appel de fonds..."/>
                    </group>
                    <group string="Notes">
                        <field name="notes" nolabel="1"
                               placeholder="Notes internes..."/>
                    </group>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_syndic_appel_fond_kanban" model="ir.ui.view">
        <field name="name">syndic.appel.fond.kanban</field>
        <field name="model">syndic.appel.fond</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
                <field name="name"/>
                <field name="libelle"/>
                <field name="montant"/>
                <field name="montant_total"/>
                <field name="date_emission"/>
                <field name="state"/>
                <field name="taux_collecte"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="libelle"/>
                                    </strong>
                                    <br/>
                                    <small>
                                        <field name="name"/>
                                    </small>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div><strong>Montant:</strong> <field name="montant"/> MAD</div>
                                <div><strong>Total:</strong> <field name="montant_total"/> MAD</div>
                                <div><strong>Date:</strong> <field name="date_emission"/></div>
                                <div>
                                    <field name="taux_collecte" widget="progressbar"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_syndic_appel_fond_search" model="ir.ui.view">
        <field name="name">syndic.appel.fond.search</field>
        <field name="model">syndic.appel.fond</field>
        <field name="arch" type="xml">
            <search string="Rechercher Appel de Fonds">
                <field name="name"/>
                <field name="libelle"/>
                <field name="residence_id"/>

                <filter string="Brouillon" name="brouillon" domain="[('state', '=', 'brouillon')]"/>
                <filter string="Confirmé" name="confirme" domain="[('state', '=', 'confirme')]"/>
                <filter string="Envoyé" name="envoye" domain="[('state', '=', 'envoye')]"/>

                <separator/>
                <filter string="Mensuel" name="mensuel" domain="[('periode', '=', 'mensuel')]"/>
                <filter string="Trimestriel" name="trimestriel" domain="[('periode', '=', 'trimestriel')]"/>
                <filter string="Annuel" name="annuel" domain="[('periode', '=', 'annuel')]"/>

                <separator/>
                <filter string="Année en cours" name="annee_courante" domain="[('annee', '=', context_today().year)]"/>
                <filter string="Mois en cours" name="mois_courant" domain="[('mois', '=', context_today().strftime('%m'))]"/>

                <separator/>
                <filter string="Actif" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archivé" name="inactive" domain="[('active', '=', False)]"/>

                <group expand="0" string="Grouper par">
                    <filter string="Résidence" name="group_residence" context="{'group_by': 'residence_id'}"/>
                    <filter string="Période" name="group_periode" context="{'group_by': 'periode'}"/>
                    <filter string="Type de charge" name="group_type" context="{'group_by': 'type_charge'}"/>
                    <filter string="État" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Année" name="group_annee" context="{'group_by': 'annee'}"/>
                    <filter string="Mois" name="group_mois" context="{'group_by': 'mois'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_syndic_appel_fond" model="ir.actions.act_window">
        <field name="name">Appels de fonds</field>
        <field name="res_model">syndic.appel.fond</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'search_default_active': 1, 'search_default_annee_courante': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Créer votre premier appel de fonds</p>
            <p>Les appels de fonds permettent de facturer les charges aux copropriétaires selon leurs quotes-parts.</p>
        </field>
    </record>
</odoo>