<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_syndic_charge_category_tree" model="ir.ui.view">
        <field name="name">syndic.charge.category.tree</field>
        <field name="model">syndic.charge_category</field>
        <field name="arch" type="xml">
            <tree string="Catégories de Charges" decoration-muted="active == False">
                <field name="code"/>
                <field name="name"/>
                <field name="parent_id"/>
                <field name="type"/>
                <field name="active" optional="hide"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_syndic_charge_category_form" model="ir.ui.view">
        <field name="name">syndic.charge.category.form</field>
        <field name="model">syndic.charge_category</field>
        <field name="arch" type="xml">
            <form string="Catégorie de Charge">
                <sheet>
                    <widget name="web_ribbon" title="Archivé" bg_color="bg-danger" invisible="active == True"/>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="parent_id"/>
                            <field name="active" invisible="1"/>
                        </group>
                        <group>
                            <field name="type"/>
                            <field name="is_repartition_key_required"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Sous-catégories">
                            <field name="child_ids">
                                <tree>
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="type"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_syndic_charge_category_search" model="ir.ui.view">
        <field name="name">syndic.charge.category.search</field>
        <field name="model">syndic.charge_category</field>
        <field name="arch" type="xml">
            <search string="Recherche Catégorie">
                <field name="name"/>
                <field name="code"/>
                <filter string="Charges Fixes" name="type_fixe" domain="[('type', '=', 'fixe')]"/>
                <filter string="Travaux" name="type_travaux" domain="[('type', '=', 'travaux')]"/>
                <separator/>
                <filter string="Archivé" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Grouper par">
                    <filter string="Type" name="group_type" context="{'group_by': 'type'}"/>
                    <filter string="Parent" name="group_parent" context="{'group_by': 'parent_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_syndic_charge_category" model="ir.actions.act_window">
        <field name="name">Catégories de Charges</field>
        <field name="res_model">syndic.charge_category</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer une nouvelle catégorie de charge
            </p>
        </field>
    </record>
</odoo>
