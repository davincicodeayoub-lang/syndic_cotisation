<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_syndic_bank_account_tree" model="ir.ui.view">
        <field name="name">syndic.bank.account.tree</field>
        <field name="model">syndic.bank_account</field>
        <field name="arch" type="xml">
            <tree string="Comptes Bancaires" decoration-muted="active == False">
                <field name="owner_ref" string="Propriétaire"/>
                <field name="bank_name"/>
                <field name="iban"/>
                <field name="swift_code"/>
                <field name="is_default" widget="boolean_toggle"/>
                <field name="active" optional="hide"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_syndic_bank_account_form" model="ir.ui.view">
        <field name="name">syndic.bank.account.form</field>
        <field name="model">syndic.bank_account</field>
        <field name="arch" type="xml">
            <form string="Compte Bancaire">
                <sheet>
                    <widget name="web_ribbon" title="Archivé" bg_color="bg-danger" invisible="active == True"/>
                    <group>
                        <group>
                            <field name="owner_ref" widget="reference" string="Propriétaire (Résidence/Personne)"/>
                            <field name="bank_name"/>
                            <field name="is_default" widget="boolean_toggle"/>
                            <field name="active" invisible="1"/>
                        </group>
                        <group>
                            <field name="account_number"/>
                            <field name="iban"/>
                            <field name="swift_code"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_syndic_bank_account_search" model="ir.ui.view">
        <field name="name">syndic.bank.account.search</field>
        <field name="model">syndic.bank_account</field>
        <field name="arch" type="xml">
            <search string="Recherche Compte Bancaire">
                <field name="iban"/>
                <field name="bank_name"/>
                <filter string="Par défaut" name="default" domain="[('is_default', '=', True)]"/>
                <separator/>
                <filter string="Archivé" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_syndic_bank_account" model="ir.actions.act_window">
        <field name="name">Comptes Bancaires</field>
        <field name="res_model">syndic.bank_account</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Ajouter un nouveau compte bancaire
            </p>
        </field>
    </record>
</odoo>
